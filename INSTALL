OPENAL="/usr/local/src/fgfs-builder/install"
export PKG_CONFIG_PATH="/usr/local/fgcom/lib/pkgconfig:$OPENAL/lib/pkgconfig:$PKG_CONFIG_PATH"
export CFLAGS="-I/usr/local/fgcom/include -I$OPENAL/include"
export LDFLAGS="-L/usr/local/fgcom/lib -L$OPENAL/lib"

cd libvidcap
./configure --prefix=/usr/local/fgcom --enable-static=yes --enable-shared=no
make install
cd ../speex
./configure --prefix=/usr/local/fgcom --enable-sse --enable-static=yes --enable-shared=no
make install
cd ../iaxclient
./configure --prefix=/usr/local/fgcom --without-vidcap --without-video --without-ogg --without-theora --disable-gsmtest --disable-iax2test --enable-local-gsm --enable-static --disable-clients --with-openal=yes
make install
cd ../src
make install
